[global]
  #monitor to appear on
  monitor = 0

  #font
  font = CaskaydiaCove Nerd Font 10

  #align text
  alignment = left

  #shorter long lines
  ellipsize = middle

  #Colours
  background = "#2E3440" #nord0
  foreground = "#D8DEE9" #nord4
